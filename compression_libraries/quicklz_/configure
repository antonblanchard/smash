#! /bin/bash

URL="https://quicklz.com/"
CODE="quicklz.c"
HEADER="quicklz.h"
DIRECTORY="quicklz"

RED='\033[0;31m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
NO_COLOR='\033[0m'

WARNING=0

MESSAGE(){
  echo -ne "${CYAN}\t${1}[${VERSION}]... ${NO_COLOR}"
  if [[ $2 != "" ]]; then
    echo
  fi
}

CHECK(){
  if [[ $? -eq 0 ]]; then
    if [[ $1 == "" ]]; then
      echo -ne "${GREEN}[SUCCESS]${NO_COLOR}"
      exit ${WARNING}
    fi
  else
    echo -ne "${RED}[FAIL]${NO_COLOR}"
    exit 2
  fi
}

GET_REPOSITORY() {
  if [[ ! -d ${DIRECTORY} ]]; then
    mkdir ${DIRECTORY}
  fi
  cd ${DIRECTORY}
  if [[ ! -f "${CODE}" ]]; then
    wget -U "Any" ${URL}${CODE} >> ../../../smash.log 2>&1
  fi
  if [[ ! -f "${HEADER}" ]]; then
    wget -U "Any" ${URL}${HEADER} >> ../../../smash.log 2>&1
  fi
  cd ..
}

MESSAGE "QuickLZ"
GET_REPOSITORY
CHECK