#! /bin/bash

VERSION="density-0.14.2"
VERSION_FIXED="density-0.14.2"
DIRECTORY="density"

RED='\033[0;31m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
NO_COLOR='\033[0m'

WARNING=0

MESSAGE(){
  echo -ne "${CYAN}\t${1}[${VERSION}]... ${NO_COLOR}"
  if [[ $2 != "" ]]; then
    echo
  fi
}

CHECK(){
  if [[ $? -eq 0 ]]; then
    if [[ $1 == "" ]]; then
      if [[ ${WARNING} == 0 ]]; then
        echo -ne "${GREEN}[SUCCESS]${NO_COLOR}"
      fi
      exit ${WARNING}
    fi
  else
    echo -ne "${RED}[FAIL]${NO_COLOR}"
    exit 2
  fi
}

UPDATE_REPOSITORY() {
  CORRECT_VERSION=$(git status | grep ${VERSION} | wc -l)
  if [[ ${CORRECT_VERSION} -eq 0 ]]; then
    git checkout --force ${VERSION} >> ../../../smash.log 2>&1
  fi
}

WARNING() {
  if [[ ${VERSION} != ${VERSION_FIXED} ]]; then
    WARNING=1
    echo -ne "${YELLOW}[WARNING] Code has been fixed using ${VERSION_FIXED} version${NO_COLOR}"
  fi
}

FIXING_CODE() {
  WARNING
  sed -i "s+ if (out_size < DENSITY_LION_MAXIMUM_DECOMPRESSED_UNIT_SIZE)+//if (out_size < DENSITY_LION_MAXIMUM_DECOMPRESSED_UNIT_SIZE)+g" src/algorithms/lion/core/lion_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ if (.*out > out_limit)+//if (*out > out_limit)+g" src/algorithms/lion/core/lion_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ return DENSITY_ALGORITHMS_EXIT_STATUS_OUTPUT_STALL;+//return DENSITY_ALGORITHMS_EXIT_STATUS_OUTPUT_STALL;+g" src/algorithms/lion/core/lion_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+in_size - DENSITY_LION_MAXIMUM_COMPRESSED_UNIT_SIZE+in_size+g" src/algorithms/lion/core/lion_decode.c >> ../../../smash.log 2>&1
  CHECK 0

  sed -i "s+ if (out_size < DENSITY_CHEETAH_DECOMPRESSED_UNIT_SIZE)+//if (out_size < DENSITY_CHEETAH_DECOMPRESSED_UNIT_SIZE)+g" src/algorithms/cheetah/core/cheetah_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ if (.*out > out_limit)+//if (*out > out_limit)+g" src/algorithms/cheetah/core/cheetah_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ return DENSITY_ALGORITHMS_EXIT_STATUS_OUTPUT_STALL;+//return DENSITY_ALGORITHMS_EXIT_STATUS_OUTPUT_STALL;+g" src/algorithms/cheetah/core/cheetah_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+in_size - DENSITY_CHEETAH_MAXIMUM_COMPRESSED_UNIT_SIZE+in_size+g" src/algorithms/cheetah/core/cheetah_decode.c >> ../../../smash.log 2>&1
  CHECK 0

  sed -i "s+ if (out_size < DENSITY_CHAMELEON_DECOMPRESSED_UNIT_SIZE)+//if (out_size < DENSITY_CHAMELEON_DECOMPRESSED_UNIT_SIZE)+g" src/algorithms/chameleon/core/chameleon_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ if (.*out > out_limit)+//if (*out > out_limit)+g" src/algorithms/chameleon/core/chameleon_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ return DENSITY_ALGORITHMS_EXIT_STATUS_OUTPUT_STALL;+//return DENSITY_ALGORITHMS_EXIT_STATUS_OUTPUT_STALL;+g" src/algorithms/chameleon/core/chameleon_decode.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+in_size - DENSITY_CHAMELEON_MAXIMUM_COMPRESSED_UNIT_SIZE+in_size+g" src/algorithms/chameleon/core/chameleon_decode.c >> ../../../smash.log 2>&1
}

MESSAGE "Density"
cd ${DIRECTORY} >> ../../smash.log 2>&1
CHECK 0
UPDATE_REPOSITORY
CHECK 0
FIXING_CODE
CHECK
cd ..