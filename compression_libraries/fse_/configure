#! /bin/bash

VERSION="master"
VERSION_FIXED="master"
DIRECTORY="FiniteStateEntropy"

RED='\033[0;31m'
YELLOW='\033[0;33m'
GREEN='\033[0;32m'
CYAN='\033[0;36m'
NO_COLOR='\033[0m'

WARNING=0

MESSAGE(){
  echo -ne "${CYAN}\t${1}[${VERSION}]... ${NO_COLOR}"
  if [[ $2 != "" ]]; then
    echo
  fi
}

CHECK(){
  if [[ $? -eq 0 ]]; then
    if [[ $1 == "" ]]; then
      if [[ ${WARNING} == 0 ]]; then
        echo -ne "${GREEN}[SUCCESS]${NO_COLOR}"
      fi
      exit ${WARNING}
    fi
  else
    echo -ne "${RED}[FAIL]${NO_COLOR}"
    exit 2
  fi
}

UPDATE_REPOSITORY() {
  CORRECT_VERSION=$(git status | grep ${VERSION} | wc -l)
  if [[ ${CORRECT_VERSION} -eq 0 ]]; then
    git checkout --force ${VERSION} >> ../../../smash.log 2>&1
  fi
}

WARNING() {
  if [[ ${VERSION} != ${VERSION_FIXED} ]]; then
    WARNING=1
    echo -ne "${YELLOW}[WARNING] Code has been fixed using ${VERSION_FIXED} version${NO_COLOR}"
  fi
}

FIXING_CODE() {
  WARNING
  sed -i "/FSE_original_/! s/FSE_/FSE_original_/g" lib/*.* >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/HUF_original_/! s/HUF_/HUF_original_/g" lib/*.* >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/MEM_H_MODULE_FSE/! s/MEM_H_MODULE/MEM_H_MODULE_FSE/g" lib/mem.h >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/ERROR_H_MODULE_FSE/! s/ERROR_H_MODULE/ERROR_H_MODULE_FSE/g" lib/error_private.h >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/BITSTREAM_H_MODULE_FSE/! s/BITSTREAM_H_MODULE/BITSTREAM_H_MODULE_FSE/g" lib/bitstream.h >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/FSE_H_FSE/! s/FSE_H/FSE_H_FSE/g" lib/fse.h >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/HUF_H_298734234_FSE/! s/HUF_H_298734234/HUF_H_298734234_FSE/g" lib/huf.h >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "/ERROR_PUBLIC_H_MODULE_FSE/! s/ERROR_PUBLIC_H_MODULE/ERROR_PUBLIC_H_MODULE_FSE/g" lib/error_public.h >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ if ( (size_t)(op-ostart) >= srcSize-1 )+/*if ( (size_t)(op-ostart) >= srcSize-1 )+g" lib/fse_compress.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ return op-ostart;+*/return op-ostart;+g" lib/fse_compress.c >> ../../../smash.log 2>&1
  CHECK 0
  sed -i "s+ if (errorCode == 1) return 0;+//if (errorCode == 1) return 0;+g" lib/fse_compress.c >> ../../../smash.log 2>&1
}

MESSAGE "FSE"
cd ${DIRECTORY} >> ../../smash.log 2>&1
CHECK 0
UPDATE_REPOSITORY
CHECK 0
FIXING_CODE
CHECK
cd ..